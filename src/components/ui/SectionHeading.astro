---
type Size = "xl" | "lg" | "md" | "sm";

const { as: Tag = "h2", size = "lg", class: className = "" } = Astro.props as {
  as?: "h1" | "h2" | "h3";
  size?: Size;
  class?: string;
};

const sizeClasses: Record<Size, string> = {
  xl: "text-5xl md:text-[64px] leading-[1.05] tracking-tight",
  lg: "text-3xl md:text-[40px] leading-tight",
  md: "text-2xl md:text-4xl leading-tight",
  sm: "text-xl md:text-[28px] leading-snug",
};
---

<Tag
  class:list={[
    "font-heading text-dark",
    sizeClasses[size],
    className,
  ]}
>
  <slot />
</Tag>
