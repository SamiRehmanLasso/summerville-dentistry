---
interface Props {
  variant?: "primary" | "secondary" | "light";
  href?: string;
  size?: "sm" | "md" | "lg";
  class?: string;
}

const { variant = "primary", href = "#", size = "md", class: className = "" } = Astro.props;

const sizeClasses = {
  sm: "px-6 py-3 text-[13px]",
  md: "px-8 py-4 text-[15px]",
  lg: "px-10 py-5 text-base",
};

const variantClasses = {
  primary: "bg-charcoal text-cream hover:bg-dark",
  secondary: "border border-charcoal text-charcoal hover:bg-charcoal hover:text-cream",
  light: "bg-cream text-charcoal hover:bg-white",
};
---

<a
  href={href}
  class:list={[
    "inline-flex items-center gap-2 rounded-lg font-medium font-body transition-all duration-300 ease-out",
    sizeClasses[size],
    variantClasses[variant],
    className,
  ]}
>
  <slot />
</a>
