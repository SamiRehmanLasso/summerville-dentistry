import SectionLabel from "../ui/SectionLabel.astro";
import SectionHeading from "../ui/SectionHeading.astro";

const technologies = [
  {
    title: "CEREC Same-Day Crowns",
    description: "Using Sirona CEREC technology, we design and mill custom ceramic crowns right in our office — no temporary crowns or second visits needed.",
    icon: `<svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.455 2.456L21.75 6l-1.036.259a3.375 3.375 0 00-2.455 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" /></svg>`,
  },
  {
    title: "Digital X-Rays & Imaging",
    description: "Our digital radiography system delivers instant, high-resolution images with up to 80% less radiation than traditional film x-rays.",
    icon: `<svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M6.827 6.175A2.31 2.31 0 015.186 7.23c-.38.054-.757.112-1.134.175C2.999 7.58 2.25 8.507 2.25 9.574V18a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9.574c0-1.067-.75-1.994-1.802-2.169a47.865 47.865 0 00-1.134-.175 2.31 2.31 0 01-1.64-1.055l-.822-1.316a2.192 2.192 0 00-1.736-1.039 48.774 48.774 0 00-5.232 0 2.192 2.192 0 00-1.736 1.039l-.821 1.316z" /><path stroke-linecap="round" stroke-linejoin="round" d="M16.5 12.75a4.5 4.5 0 11-9 0 4.5 4.5 0 019 0zM18.75 10.5h.008v.008h-.008V10.5z" /></svg>`,
  },
  {
    title: "Intraoral Cameras",
    description: "See what we see. Our high-definition intraoral cameras let you view real-time images of your teeth to better understand your treatment.",
    icon: `<svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>`,
  },
  {
    title: "SureSmile Clear Aligners",
    description: "Computer-designed clear aligners for precise, comfortable teeth straightening — custom-fabricated for your unique smile.",
    icon: `<svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M15.182 15.182a4.5 4.5 0 01-6.364 0M21 12a9 9 0 11-18 0 9 9 0 0118 0zM9.75 9.75c0 .414-.168.75-.375.75S9 10.164 9 9.75 9.168 9 9.375 9s.375.336.375.75zm-.375 0h.008v.015h-.008V9.75zm5.625 0c0 .414-.168.75-.375.75s-.375-.336-.375-.75.168-.75.375-.75.375.336.375.75zm-.375 0h.008v.015h-.008V9.75z" /></svg>`,
  },
  {
    title: "Laser Dentistry",
    description: "Minimally invasive laser treatments for gum therapy, cavity detection, and soft tissue procedures — often with no anesthetic needed.",
    icon: `<svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" /></svg>`,
  },
  {
    title: "Nitrous Oxide Sedation",
    description: "Comfortable, anxiety-free visits with safe nitrous oxide sedation — perfect for patients who feel nervous about dental procedures.",
    icon: `<svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" /></svg>`,
  },
];
---

<section class="relative overflow-hidden rounded-2xl bg-charcoal px-8 py-16 md:px-16">
  <!-- Reuse CTA shapes (white on dark bg) -->
  <div class="pointer-events-none absolute inset-0 overflow-hidden" aria-hidden="true">
    <div class="absolute rounded-full" style="right:-30px;top:60px;width:100px;height:100px;background:#FFFFFF;opacity:0.04;" />
    <div class="absolute rounded-full" style="left:80px;bottom:-20px;width:140px;height:140px;background:#FFFFFF;opacity:0.03;" />
    <div class="absolute" style="left:50%;top:30px;width:50px;height:50px;background:#FFFFFF;opacity:0.05;transform:rotate(20deg);border-radius:8px;" />
  </div>

  <div class="relative flex flex-col items-center gap-12">
    <div class="flex flex-col items-center gap-4 text-center">
      <SectionLabel class="!text-copper">Our Technology</SectionLabel>
      <SectionHeading class="!text-cream">Advanced Care, Modern Comfort</SectionHeading>
      <p class="max-w-xl text-base leading-relaxed text-taupe font-body">
        We invest in the latest dental technology so you can enjoy faster, more comfortable,
        and more precise treatments every visit.
      </p>
    </div>

    <div class="grid w-full grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3">
      {technologies.map((tech, i) => (
        <div
          class="animate-on-scroll flex flex-col gap-4 rounded-2xl border border-white/10 bg-white/5 p-7 transition-all duration-300 hover:bg-white/10"
          style={`transition-delay: ${i * 0.08}s`}
        >
          <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-copper/20 text-copper">
            <Fragment set:html={tech.icon} />
          </div>
          <h3 class="text-base font-medium text-cream font-body">{tech.title}</h3>
          <p class="text-sm leading-relaxed text-taupe font-body">{tech.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
