---
import SectionHeading from "../ui/SectionHeading.astro";
import Button from "../ui/Button.astro";

const locations = [
  {
    name: "Evans Office",
    image: "/images/Office.webp",
    address: "3991 Amberley Trail",
    city: "Evans, GA 30809",
    phone: "(706) 250-2998",
    hours: "Mon–Fri 7:30am – 5:00pm",
  },
  {
    name: "Augusta Office",
    image: "/images/office 2.webp",
    address: "3013 Walton Way",
    city: "Augusta, GA 30909",
    phone: "(706) 738-4723",
    hours: "Mon–Fri 7:30am – 5:00pm",
  },
];
---

<section id="locations" class="rounded-2xl bg-cream px-8 py-16 md:px-16">
  <div class="flex flex-col items-center gap-12">
    <div class="flex flex-col items-center gap-4 text-center">
      <SectionHeading>Visit Our Offices</SectionHeading>
      <p class="max-w-xl text-base leading-relaxed text-charcoal font-body">
        Two convenient locations in the Augusta area, both designed with your comfort in mind.
      </p>
    </div>

    <div class="grid w-full grid-cols-1 gap-6 md:grid-cols-2">
      {locations.map((loc, i) => (
        <div
          class="animate-on-scroll group overflow-hidden rounded-2xl bg-white transition-all duration-300 hover:-translate-y-1"
          style={`transition-delay: ${i * 0.12}s`}
        >
          <!-- Office photo -->
          <div class="relative h-56 overflow-hidden">
            <img
              src={loc.image}
              alt={`${loc.name} exterior`}
              class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
              loading="lazy"
            />
          </div>

          <!-- Info -->
          <div class="flex flex-col gap-4 p-7">
            <h3 class="text-xl font-medium text-dark font-body">{loc.name}</h3>

            <div class="flex flex-col gap-3">
              <!-- Address -->
              <div class="flex items-start gap-3">
                <svg class="mt-0.5 h-5 w-5 shrink-0 text-copper" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                </svg>
                <div class="text-sm leading-relaxed text-charcoal font-body">
                  <p>{loc.address}</p>
                  <p>{loc.city}</p>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-center gap-3">
                <svg class="h-5 w-5 shrink-0 text-copper" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                </svg>
                <a href={`tel:${loc.phone.replace(/[^0-9]/g, "")}`} class="text-sm font-medium text-dark font-body hover:text-copper transition-colors duration-200">
                  {loc.phone}
                </a>
              </div>

              <!-- Hours -->
              <div class="flex items-center gap-3">
                <svg class="h-5 w-5 shrink-0 text-copper" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-sm text-charcoal font-body">{loc.hours}</span>
              </div>
            </div>

            <Button variant="primary" size="sm" href="#contact">Schedule at {loc.name.split(" ")[0]}</Button>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
