---
import SectionLabel from "../ui/SectionLabel.astro";
import SectionHeading from "../ui/SectionHeading.astro";
import ServiceCard from "../ui/ServiceCard.astro";

/* Grid flows leftâ†’right, so order cards to match the design's column pairs:
   Col 1: sage / blue   |   Col 2: olive / cream   |   Col 3: cream / sage */
const services = [
  { title: "Cosmetic Dentistry", description: "Transform your smile with veneers, whitening, and advanced cosmetic procedures tailored to you.", icon: "sparkles", color: "cream-outline" as const },
  { title: "Dental Implants", description: "Permanent tooth replacement solutions that look, feel, and function like natural teeth.", icon: "circle-dot", color: "olive" as const },
  { title: "Teeth Whitening", description: "Professional whitening treatments that deliver dramatically brighter results safely and effectively.", icon: "sun", color: "cream-outline" as const },
  { title: "Same-Day Crowns", description: "Get beautiful, durable crowns in a single visit using our advanced Sirona CEREC technology.", icon: "crown", color: "blue" as const },
  { title: "Clear Aligners", description: "Straighten your teeth discreetly with SureSmile\u00AE clear aligners \u2014 comfortable, removable, and virtually invisible.", icon: "scan-line", color: "cream-outline" as const },
  { title: "Preventive Care", description: "Comprehensive cleanings, exams, and early detection to keep your smile healthy for a lifetime.", icon: "shield-check", color: "sage" as const },
];
---

<section id="services" class="rounded-2xl bg-cream px-8 py-16 md:px-16">
  <div class="flex flex-col items-center gap-12">
    <!-- Header -->
    <div class="flex flex-col items-center gap-4 text-center">
      <SectionLabel>Our Services</SectionLabel>
      <SectionHeading>Comprehensive Care for Every Smile</SectionHeading>
      <p class="max-w-[600px] text-base leading-relaxed text-charcoal font-body">
        From preventive care to full-mouth reconstruction, our team delivers exceptional
        results with advanced technology and a gentle touch.
      </p>
    </div>

    <!-- Cards grid: 3 columns, each with 2 cards -->
    <div class="grid w-full gap-1.5 md:grid-cols-3">
      {services.map((service, i) => (
        <div class="animate-on-scroll" style={`transition-delay: ${i * 0.1}s`}>
          <ServiceCard
            title={service.title}
            description={service.description}
            icon={service.icon}
            color={service.color}
          />
        </div>
      ))}
    </div>
  </div>
</section>
