---
const logos = [
  "American Dental Association",
  "Academy of Cosmetic Dentistry",
  "Georgia Dental Association",
  "Academy of General Dentistry",
];
---

<section class="rounded-2xl bg-cream px-8 py-8 md:px-16">
  <div class="flex flex-col items-center gap-5">
    <p class="text-[13px] tracking-wide text-muted font-body">
      Trusted by families across Augusta &amp; Evans, GA
    </p>
    <div class="flex flex-wrap items-center justify-center gap-8 md:gap-12">
      {logos.map((name) => (
        <span class="text-[13px] font-medium tracking-wide text-charcoal opacity-60 font-body">
          {name}
        </span>
      ))}
    </div>
  </div>
</section>
