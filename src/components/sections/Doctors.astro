---
import SectionHeading from "../ui/SectionHeading.astro";
import DoctorCard from "../ui/DoctorCard.astro";
import DecorShapes from "../ui/DecorShapes.astro";
import doctorsData from "../../../content/data/doctors.json";
---

<section id="doctors" class="relative overflow-hidden rounded-2xl bg-cream px-8 py-16 md:px-16" data-sb-object-id="content/data/doctors.json">
  <DecorShapes section="doctors" />
  <div class="relative flex flex-col items-center gap-12">
    <div class="flex flex-col items-center gap-4 text-center">
      <SectionHeading>{doctorsData.heading}</SectionHeading>
      <p class="max-w-xl text-base leading-relaxed text-charcoal font-body" data-sb-field-path="description">
        {doctorsData.description}
      </p>
    </div>

    <div class="grid w-full grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-4">
      {doctorsData.doctors.map((doc: { name: string; description: string; image: string }, i: number) => (
        <div class="animate-on-scroll" style={`transition-delay: ${i * 0.1}s`} data-sb-field-path={`doctors.${i}`}>
          <DoctorCard
            name={doc.name}
            description={doc.description}
            image={doc.image}
          />
        </div>
      ))}
    </div>
  </div>
</section>
